                <div class="block-content fs-sm">
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="text_problemDesc">Problem Description</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control " id="text_problemDesc" name="text_problemDesc">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="txt_activityRepair">Activity Repair</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control " id="txt_activityRepair" name="txt_activityRepair">
                        </div>
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-alt-primary" onclick="addRepair()">
                        Insert
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modal_repairUpdate" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-rounded shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Update Recommended Repair</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
