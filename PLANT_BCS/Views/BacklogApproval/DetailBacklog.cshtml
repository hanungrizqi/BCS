
@{
    ViewBag.Title = "DetailBacklog";
    ViewBag.JS = "/Scripts/Page/DetailApproval.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="content-heading">Detail Backlog</h2>

<div class="block block-rounded block-link-shadow">
    <div class="block-content">
        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-6">
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_noBacklog">No Backlog</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_noBacklog" name="txt_noBacklog" value="@ViewBag.noBackLog" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_dstrct">District</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_dstrct" name="txt_dstrct" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_eqNumber">Eqp Number</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_eqNumber" name="txt_eqNumber" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_compCode">Component Code</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_compCode" name="txt_compCode" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_egi">EGI</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_egi" name="txt_egi" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_hm">HM</label>
                    <div class="col-sm-8">
                        <input type="number" class="form-control " id="txt_hm" name="txt_hm" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_blDesc">Backlog Description</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_blDesc" name="txt_blDesc" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_dInspecton">Inspecton Date</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control " id="txt_dInspecton" name="txt_dInspecton" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_inspector">Inspector</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_inspector" name="txt_inspector" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_source">Sources</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_source" name="txt_source" readonly>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-6">
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_wg">Work Group</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_wg" name="txt_wg" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_standJob">Standard Job</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_standJob" name="txt_standJob" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_nrpGl">NRP GL</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_nrpGl" name="txt_nrpGl" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_oriID">Originator ID</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_oriID" name="txt_oriID" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_planRD1">Plan Repair Date 1</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control " id="txt_planRD1" name="txt_planRD1" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_mp">Manpower</label>
                    <div class="col-sm-8">
                        <input type="number" class="form-control " id="txt_mp" name="txt_mp" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_hEst">Hour Estimation</label>
                    <div class="col-sm-8">
                        <input type="number" class="form-control" step="any" id="txt_hEst" name="txt_hEst" readonly>
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-sm-4 col-form-label" for="txt_posBL">Posisi Backlog</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control " id="txt_posBL" name="txt_posBL" readonly>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="block block-rounded block-link-shadow">
    <div class="block-header block-header-default">
        <h3 class="block-title">Recommended Part</h3>
        <div class="block-options">
            <button type="submit" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#modal">
                <i class="fa fa-add opacity-50 me-1"></i> Add Part
            </button>
        </div>
    </div>
    <div class="block-content">
        <div class="row justify-content-center pb-4">
            <div class="col-sm-12 col-md-12 table-responsive">
                <table class="table table-bordered table-striped table-vcenter js-dataTable-full-pagination w-100" id="table_part">
                    <thead class="text-center">
                        <tr>
                            <th class="text-center">No</th>
                            <th>Part No</th>
                            <th>Stock Code</th>
                            <th>Part Description</th>
                            <th>Fig No</th>
                            <th>Index No</th>
                            <th>Qty</th>
                            <th>UoM</th>
                            <th>Part Class</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<div class="block block-rounded block-link-shadow">
    <div class="block-header block-header-default">
        <h3 class="block-title">Recommended Repair</h3>
        <div class="block-options">
            <button type="submit" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#modal_repair">
                <i class="fa fa-add opacity-50 me-1"></i> Add Repair
            </button>
        </div>
    </div>
    <div class="block-content">
        <div class="row justify-content-center pb-4">
            <div class="col-sm-12 col-md-12 table-responsive">
                <table class="table table-bordered table-striped table-vcenter js-dataTable-full-pagination w-100" id="table_repair">
                    <thead class="text-center">
                        <tr>
                            <th class="text-center">No</th>
                            <th>Problem Description</th>
                            <th>Activity Repair</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>
        </div>
    </div>
</div>


<div class="block block-rounded block-link-shadow">
    <div class="block-header">
        <h3 class="block-title">Note</h3>
    </div>
    <div class="block-content">
        <div class="mb-4">
            <textarea class="form-control" id="txt_note" name="txt_note"></textarea>
        </div>
    </div>
    <div class="block-content block-content-full block-content-sm bg-body-light fs-sm">
        <div class="block-options justify-content-center">
            <div class="row text-center">
                <div class="col-md-12">
                    <a href="/BacklogApproval/ListApproval" class="btn btn-sm btn-info"><i class="fa fa-backward opacity-50 me-1"></i>Back</a>
                    <button type="submit" class="btn btn-sm btn-danger" value="PLANNER CANCEL" onclick="submitApproval(this.value)">
                        <i class="fa fa-times opacity-50 me-1"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-sm btn-success" value="PLANNER APPROVED" onclick="submitApproval(this.value)">
                        <i class="fa fa-check-circle opacity-50 me-1"></i> Approve
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modal" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-rounded shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Add Recommended Part</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="txt_stckCode">Stock Code</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control " id="txt_stckCode" name="txt_stckCode">
                        </div>
                        <div class="col-sm-2">
                            <button class="btn btn-info" onclick="searchPartNo()">Search</button>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="txt_partNo">Part Number</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control " id="txt_partNo" name="txt_partNo">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="txt_fiqNo">Fig No</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control " id="txt_fiqNo" name="txt_fiqNo">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="txt_indexNo">Index No</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control " id="txt_indexNo" name="txt_indexNo">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="txt_qty">Qty</label>
                        <div class="col-sm-8">
                            <input type="number" min="0" class="form-control " id="txt_qty" name="txt_qty">
                        </div>
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-alt-primary" onclick="insertPart()">
                        Insert
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modal_update" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-rounded shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Update Recommended Part</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="txt_partNo_update">Part Number</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control " id="txt_partNo_update" name="txt_partNo_update" readonly>
                            <input type="text" class="form-control " id="txt_partId_update" name="txt_partId_update" hidden readonly>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="txt_stckCode_update">Stock Code</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control " id="txt_stckCode_update" name="txt_stckCode_update" readonly>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="txt_fiqNo_update">Fig No</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control " id="txt_fiqNo_update" name="txt_fiqNo_update">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="txt_indexNo_update">Index No</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control " id="txt_indexNo_update" name="txt_indexNo_update">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" for="txt_qty_update">Qty</label>
                        <div class="col-sm-8">
                            <input type="number" min="0" class="form-control" id="txt_qty_update" name="txt_qty_update">
                        </div>
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-alt-primary" onclick="updatePart()">
                        Update
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modal_repair" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-rounded shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Add Recommended Repair</h3>
                    <div class="block-options">
